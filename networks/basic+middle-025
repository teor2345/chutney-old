# If you get failures, try:
# ulimit -S -n 512 or similar
# a longer delay in test-network.sh
Authority = Node(tag="a", authority=1, relay=1, torrc="authority.tmpl")
Relay = Node(tag="r", relay=1, torrc="relay.tmpl")
Exit = Node(tag="e", relay=1, torrc="exit.tmpl")
Client = Node(tag="c", torrc="client.tmpl")

# Guard percentage has been reduced from 50% to 25% of relays
# This may require more relay nodes
NODES = Authority.getN(4) + Relay.getN(8) + Exit.getN(8) + Client.getN(5)

ConfigureNodes(NODES)
